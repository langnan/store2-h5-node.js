extends layout

block style
	link(rel="stylesheet", href="/css/store.css")
	link(rel="stylesheet", href="/css/storeSummary.css")

block content
	div.section.page.page1
		p.title !{`${result.collegeName}<br><span class='highlight'>专利数据</span>统计报告`}
		img.cup(src="/img/store/page1-cup.png")
		p.content1 !{`<span class="highlight-txt">${result.value.kyCount}</span>位参与发明人，<span class="highlight-txt">${result.value.count}</span>件专利，覆盖<span class="highlight-txt">${result.value.ipcCount}</span>个研究领域；`}
		div.divider-outter
			div.divider-inner
		p.content2 !{`见证了${result.collegeName}在科研路上的辛勤和汗水。`}
		img.page-arrow(src="/img/store/page-arrow.png")
		p#license 本数据由中高知识产权价值评估系统提供		

	div.section.page.page2
		img.title(src="/img/store/page2-title.png")
		img.divider(src="/img/store/page2-divider.png")
		div.content
			img.content-bg(src="/img/store/page2-content-border.png")
			div.content-item.content-item1
				div.item-icon-container
					img.content-item-icon(src="/img/store/page2-icon1.png")
				div.content-item-info
					p.content-item-title !{`<span class="highlight">${result.value.fmzlCount}</span>条发明专利`}
					p.content-item-detail !{`位居全国高校第<span class="highlight">${result.value.fmzlRank}</span>名，技术含金量99.9999%`}
			img.divider1(src="/img/store/page2-divider1.png")
			div.content-item.content-item2
				div.content-item-info
					p.content-item-title !{`<span class="highlight">${result.value.syxxCount}</span>条实用新型`}
					p.content-item-detail !{`位居全国高校第<span class="highlight">${result.value.syxxRank}</span>名，微创新真是如雨后春笋一般！`}
				div.item-icon-container
					img.content-item-icon(src="/img/store/page2-icon2.png")
			img.divider2(src="/img/store/page2-divider2.png")
			div.content-item.content-item3
				div.item-icon-container
					img.content-item-icon(src="/img/store/page2-icon3.png")
				div.content-item-info
					p.content-item-title !{`<span class="highlight">${result.value.wgsjCount}</span>条外观专利`}
					p.content-item-detail !{`位居全国高校第<span class="highlight">${result.value.wgsjRank}</span>，绝对是看颜值、懂审美、有品位的高校！`}
		img.page-arrow(src="/img/store/page-arrow.png")
		img.left-hill(src="/img/store/page2-left-hill.png")
		img.right-hill(src="/img/store/page2-right-hill.png")

	div.section.page.page3
		img.title(src="/img/store/page3-title.png")
		img.flags(src="/img/store/page3-deco.png")
		div.page3-content1
			img.page3-content1-bg(src="/img/store/page3-bg2.png")
			p.content1-score !{`${(result.value.validRate*100).toFixed(2)}%`}
			div.page3-content1-info
				span.left-line
				span.text !{`看得出${result.collegeName}对科学研究成果的珍视和与呵护`}
				span.right-line
		div.page3-content2
			img.page3-content2-bg(src="/img/store/page3-bg1.png")
			p.content2-text !{`贵校的（许可+转让率）为${(result.value.transferRate*100).toFixed(2)}%，运营状况良好，打败了全国${(1-result.value.transferRank/2015).toFixed(2)*100}%的高校，继续保持吧！`}
		img.page-arrow(src="/img/store/page-arrow.png")

	div.section.page.page4
		div.main
			div.row.top-row
				span.info1 !{`专利总数：<strong class="highlight">${result.value.count}件</strong>`}
				span.info2 !{`参与发明人：<strong class="highlight">${result.value.kyCount}位</strong>`}
			img.divider1(src="/img/store/page4-divider1.png")
			div.row.mid-row.mid-row1
				p.time-range !{`（ ${result.value.ad} - ${result.value.now} ）`}
				div.chart-container
					div.pie-container
						img.pie-bg(src="/img/store/page4-pie-bg.png")
						canvas#canPie(width=500,height=500,data-value=`${result.value.fmzlCount},${result.value.syxxCount},${result.value.wgsjCount}`)
					ul.count-list
						li.count-item
							span.color-tip.fmzl-color
							span.count-name 发明专利
							span.count-value=`${result.value.fmzlCount}件`
							img.divider2(src="/img/store/page4-divider2.png")
						li.count-item
							span.color-tip.syxx-color
							span.count-name 实用新型
							span.count-value=`${result.value.syxxCount}件`
							img.divider2(src="/img/store/page4-divider2.png")            
						li.count-item
							span.color-tip.wgsj-color
							span.count-name 外观专利
							span.count-value=`${result.value.wgsjCount}件`
							img.divider2(src="/img/store/page4-divider2.png")            
				div.rank-clue
					img.leaf.left-leaf(src="/img/store/page4-left-leaf.png")
					span.rank-clue-txt !{`${result.collegeName}专利总数<br>位居全国第${result.value.countRank}名`}
					img.leaf.right-leaf(src="/img/store/page4-right-leaf.png")  
				img.divider3(src="/img/store/page4-divider3.png")

			div.row.mid-row.mid-row2
				div.colleague-container
					img.row2-icon(src="/img/store/page4-icon1.png")
					p 有效比例
					p.highlight !{`${(result.value.validRate*100).toFixed(2)}%`}
				img.divider4(src="/img/store/page4-divider4.png")
				div.field-container
					img.row2-icon(src="/img/store/page4-icon2.png")
					p 涉及领域
					p.highlight= result.value.ipcCount
			img.divider1(src="/img/store/page4-divider1.png")    
			div.row.mid-row.mid-row3
				img.page4-bg1(src="/img/store/page4-bg1.png")
				ul.rank-list  
					li.rank-item
						p.rank-name 发明专利排名
						p.rank-value.highlight= result.value.fmzlRank
					img.divider5(src="/img/store/page4-divider5.png")
					li.rank-item
						p.rank-name 实用新型排名
						p.rank-value.highlight= result.value.syxxRank
					img.divider6(src="/img/store/page4-divider6.png")        
					li.rank-item
						p.rank-name 外观专利排名
						p.rank-value.highlight= result.value.wgsjRank 
			img.modal-btn(src="/img/store/page4-btn1.png")      
			div.bottom-tip
				a(href="http://cn.mikecrm.com/GAT6eFW") 了解更多高校专利报告，登记高校信息，免费开通专利宝账号
		div.search-modal-bg
			div.search-modal-container
				div.search-modal
					img.book(src="/img/store/page4-book.png")
					img.close-btn(src="/img/store/page4-delete-icon.png")
					p.search-tip 输入高校名称查看专利数据报告
					div.input-container
						input.search-input(type="text")
						img.search-btn(src="/img/store/page4-search-btn.png")


block script
	script(src='/js/store.js')
	script(src='https://s19.cnzz.com/z_stat.php?id=1273944751&web_id=1273944751', language='javascript')
